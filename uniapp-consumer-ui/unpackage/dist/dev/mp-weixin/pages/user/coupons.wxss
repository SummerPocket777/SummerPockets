.container{padding:20rpx;background-color:#f5f5f5}.coupon{position:relative;background-color:#fff;border-radius:20rpx;margin-bottom:30rpx;padding:20rpx;box-shadow:0 4rpx 15rpx rgba(0,0,0,.1);overflow:hidden;transition:transform .3s ease,box-shadow .3s ease;animation:fadeIn .5s ease-in-out}.coupon:hover{transform:scale(1.02);box-shadow:0 8rpx 20rpx rgba(0,0,0,.2)}.coupon-bg{position:absolute;top:0;left:0;width:100%;height:100%;z-index:-1;border-radius:20rpx;opacity:.1}.coupon-content{z-index:1}.coupon-header{display:flex;justify-content:space-between;align-items:center;border-bottom:2rpx solid #f0f0f0;padding-bottom:20rpx;margin-bottom:20rpx}.coupon-title{font-size:36rpx;font-weight:700;color:#333}.coupon-discount{font-size:32rpx;color:#ff5722}.coupon-body{font-size:28rpx;color:#666}.coupon-validity{font-size:24rpx;color:#999;margin-top:10rpx}@keyframes fadeIn{0%{opacity:0;transform:translateY(20rpx)}to{opacity:1;transform:translateY(0)}}
