<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sp.mapper.SetmealDishMapper">

    <resultMap id="BaseResultMap" type="com.sp.model.domain.SetmealDish">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="setmealId" column="setmeal_id" jdbcType="BIGINT"/>
            <result property="dishId" column="dish_id" jdbcType="BIGINT"/>
            <result property="copies" column="copies" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,setmeal_id,dish_id,
        copies
    </sql>

    <insert id="insertBatch">
        insert into setmeal_dish
        (setmeal_id,dish_id,copies)
        values
        <foreach collection="setmealDishes" item="sd" separator=",">
            (#{sd.setmealId},#{sd.dishId},#{sd.copies})
        </foreach>
    </insert>
    <select id="getSetmealIdsByDishIds" resultType="java.lang.Long">
        SELECT * FROM your_table WHERE dish_id IN
        <foreach collection="dishIds" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
